@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model EtkinlikYonetimSistemi.Web.Models.SifreYenilemeViewModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Biletika - Şifre Yenileme</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <style>
        body {
            margin: 0;
            padding: 0;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: #000;
            color: white;
            height: 100vh;
            overflow: hidden;
        }
        #bg-video {
            position: fixed;
            top: 0;
            left: 0;
            width: 100vw;
            height: 100vh;
            object-fit: cover;
            z-index: -1;
            filter: brightness(0.4);
        }
        .navbar {
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            height: 70px;
            background: #000;
            z-index: 100;
            display: flex;
            align-items: center;
            padding: 0 20px;
        }
        .logo {
            font-size: 24px;
            font-weight: bold;
            color: white;
            text-decoration: none;
        }
        .container {
            display: flex;
            height: 100vh;
            align-items: center;
            justify-content: space-between;
            padding: 0 100px;
        }
        .left-side {
            max-width: 600px;
        }
        .site-title {
            font-family: monospace;
            font-size: 48px;
            margin-bottom: 40px;
            font-weight: bold;
        }
        .main-title {
            font-size: 36px;
            margin: 0 0 20px 0;
            font-weight: bold;
        }
        .subtitle {
            font-size: 20px;
            opacity: 0.8;
            margin: 0;
        }
        .right-side {
            width: 400px;
            padding: 0;
        }
        .form-container {
            background: rgba(0,0,0,0.5);
            border-radius: 16px;
            padding: 40px 32px;
            box-shadow: 0 4px 32px rgba(0,0,0,0.2);
        }
        .form-container h2 {
            text-align: center;
            margin-bottom: 30px;
            font-size: 32px;
            font-weight: bold;
        }
        .form-group label {
            color: #fff;
            font-size: 16px;
            margin-bottom: 6px;
        }
        .form-control {
            width: 100%;
            padding: 15px;
            margin-bottom: 15px;
            border: none;
            border-radius: 8px;
            background: rgba(255,255,255,0.9);
            font-size: 16px;
            box-sizing: border-box;
        }
        .btn-primary {
            width: 100%;
            padding: 15px;
            border: none;
            border-radius: 8px;
            background: #4285f4;
            color: white;
            font-size: 16px;
            cursor: pointer;
            margin-bottom: 10px;
            transition: background 0.3s;
        }
        .btn-primary:hover {
            background: #3367d6;
        }
        .text-danger, .text-success {
            text-align: center;
            margin-top: 10px;
        }
    </style>
</head>
<body>
    <video id="bg-video" autoplay muted loop playsinline>
        <source src="~/media/26344-357839084.mp4" type="video/mp4">
    </video>
    <div class="navbar">
        <a href="/" class="logo">Biletika</a>
    </div>
    <div class="container">
        <div class="left-side">
            <div class="site-title">Biletika</div>
            <h1 class="main-title">Biletika'ya Üye Ol!</h1>
            <p class="subtitle">Üyeliğin ardından biletini satın al</p>
        </div>
        <div class="right-side">
            <div class="form-container">
                <h2>Şifre Yenileme</h2>
                <form asp-action="SifreYenileme" method="post">
                    <div class="form-group mb-3">
                        <label for="Email">E-posta</label>
                        <input asp-for="Email" class="form-control" type="email" required />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="YeniSifre">Yeni Şifre</label>
                        <input asp-for="YeniSifre" class="form-control" type="password" required />
                        <span asp-validation-for="YeniSifre" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label for="YeniSifreTekrar">Yeni Şifre (Tekrar)</label>
                        <input asp-for="YeniSifreTekrar" class="form-control" type="password" required />
                        <span asp-validation-for="YeniSifreTekrar" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-primary w-100">Şifreyi Yenile</button>
                </form>
                @if (ViewBag.Hata != null)
                {
                    <div class="text-danger mt-3">@ViewBag.Hata</div>
                }
                @if (ViewBag.Basarili != null)
                {
                    <div class="text-success mt-3">@ViewBag.Basarili</div>
                }
            </div>
        </div>
    </div>
</body>
</html>
