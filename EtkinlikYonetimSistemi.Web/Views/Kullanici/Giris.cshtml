@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model EtkinlikYonetimSistemi.Web.Models.GirisViewModel
@{
    ViewBag.Title = "Giriş Yap";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="baslik">
        Biletika
    </div>
    <div class="promotion-text">
        <h2>Biletika'ya Üye Ol!</h2>
        <p>Üyeliğin ardından biletini satın al</p>
    </div>
    <video autoplay muted loop>
        <source src="~/media/26344-357839084.mp4" type="video/mp4">
    </video>
</div>

<div class="signup-form">
    @using (Html.BeginForm("Giris", "Kullanici", FormMethod.Post, new { @id = "loginForm" }))
    {
        <h1><i class="fas fa-user"></i> Giriş Yap</h1>
        @Html.TextBoxFor(m => m.Email, new { @class = "txt", placeholder = "e-posta", type = "email", required = "required" })
        @Html.PasswordFor(m => m.Sifre, new { @class = "txt", placeholder = "şifre", required = "required" })
        <input type="submit" value="Giriş Yap" class="signin-btn" />
        <a href="@Url.Action("Kayit", "Kullanici")" class="signup-btn">Hesap Oluştur</a>
        @if (ViewBag.Hata != null)
        {
            <div class="text-danger">@ViewBag.Hata</div>
        }
    }
</div>
